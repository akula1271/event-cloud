@using Abp.Web.Mvc.Extensions
@using Microsoft.Owin.Security
@model EventCloud.Web.Models.Account.LoginFormViewModel
@section Styles
{
    @Html.IncludeStyle("~/Views/Account/Login.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Views/Account/Login.js")
}
<div class="container">
    <div id="LoginArea" class="row">
        <div class="col-lg-12">
            <div class="well bs-component">
                <form id="LoginForm" class="form-horizontal" action="/Account/Login?returnUrl=/" method="POST">
                    <fieldset class="">
                        <legend class="">asdf Log in</legend>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" id="TenancyName" placeholder="Tenancy name" required="" maxlength="64">
                                    <span class="text-muted">Can be empty to login as host.</span>
                                </div>
                            </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="text" class="form-control" id="EmailAddressInput" placeholder="User name or email" required="" maxlength="256">asdf</div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-12">
                                <input type="password" class="form-control" id="PasswordInput" placeholder="Password" required="" maxlength="32">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" id="RememberMeInput">
                                        <span class="ripple"></span>
                                        <span class="check"></span> Remember me
                                    </label>
                                </div>
                            </div>
                        </div>

                        <input id="ReturnUrlHash" type="hidden" name="returnUrlHash" value="">

                        <div class="form-group">
                            <div class="col-lg-12">
                                <button id="LoginButton" type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Log in</button>
                                <a class="btn btn-success" href="/Account/Register"><i class="fa fa-sign-in"></i> Register</a>
                            </div>
                        </div>
                    </fieldset>
                </form>




            </div>
        </div>
    </div>
</div>